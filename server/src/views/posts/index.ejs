<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../partials/head') %>
  </head>
  <body>
    <%- include('../partials/header', { error: error, success: success }) %>

    <div class="container mt-2">
      <div style="max-width: 600px; margin: 0 auto">
        <%- include('../partials/create-post') %>
      </div>
    </div>

    <% const friends = currentUser.friends || []; %> <% posts.forEach((post) =>
    { %> <% if ( post.author.id.toString() === currentUser._id.toString() ||
    friends.find(friend => friend === post.author.id.toString()) ) { %>
    <div class="container">
      <div style="max-width: 600px; margin: 1rem auto">
        <%- include('../partials/post-item', { post: post }) %>
      </div>
    </div>
    <% } %> <% }); %> <%- include('../partials/post-modal') %> <%-
    include('../partials/footer') %>
  </body>
</html>
